<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainScreen.ui.DogFragment"
    android:id="@+id/fr">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="352dp"
                android:layout_height="352dp"
                android:layout_gravity="center_horizontal"
                android:padding="16dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:id="@+id/imgDogMain"
                android:src="@drawable/dog"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/photo" />
            </LinearLayout>
             <TextView
                 android:id="@+id/textInf"
                 style="@style/TextViewStyle"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:text="@string/name_age_n_city"
                 android:layout_marginBottom="16dp"
                 android:gravity="start"
                 android:textSize="24sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>